<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/text_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="@string/text_sections"
        android:textSize="@dimen/text_size_large"/>

    <TextView
        android:id="@+id/text_gymnastics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/text_gymnastics"
        />

    <TextView
        android:id="@+id/text_swimming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/text_swimming"
        />

    <TextView
        android:id="@+id/text_acrobatics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/text_acrobatics"
        />

    <TextView
        android:id="@+id/text_yoga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/text_yoga"
        />

    <TextView
        android:id="@+id/text_football"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/text_football"
        />

    <TextView
        android:id="@+id/text_boxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/text_boxing"
        />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Записаться"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_color"
        />

    <ImageView
        android:id="@+id/image_cup"
        android:layout_width="150dp"
        android:layout_height="144dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/cup_icon_icons_com_52156"
        android:layout_gravity="center"/>



</LinearLayout>

